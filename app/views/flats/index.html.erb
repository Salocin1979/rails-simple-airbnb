<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1585531455700-7af2f103924d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <p><%= link_to "Iben's airBnB", flats_path, class: 'p-3 mb-2 bg-success text-white' %></p>
    <p><%= link_to "Add flat", new_flat_path, class: 'p-1 mb-2 bg-info text-white' %></p>
  </div>
</div>

<div class="d-flex justify-content-around flex-column">
  <ul class="list-group list-group-horizontal">
    <% @flats.each do |flat| %>
      <li class="list-group-item m-4 flex-wrap">
        <div class="flat">
          <img src="<%= flat.picture_url %>" alt="flat img">
          <h3><%= flat.name %></h3>
          <p><%= flat.description %></p>
          <p>ðŸ‘¤<%= flat.number_of_guests %> ðŸ’²<%= flat.price_per_night %></p>
        </div>
        <div class="links d-flex justify-content-around">
          <%= link_to "More info", flat_path(flat), class: 'text-primary'%>
          <%= link_to "Edit", edit_flat_path(flat), class: 'text-warning' %>
          <%= link_to "Remove",
            flat_path(flat),
            method: :delete,
            data: { confirm: "Are you sure you want to delete #{flat.name}?" },
            class: 'text-danger' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>